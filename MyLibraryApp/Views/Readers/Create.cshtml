@model MyLibraryApp.Models.Reader

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reader</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelNum" class="control-label"></label>
                <input asp-for="TelNum" type="number" class="form-control" />
                <span asp-validation-for="TelNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
          <div class="container">
                <div class="row">
            <div class="col-2" >
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-5 offset-5" >
            <a asp-action="Index" class="btn btn-secondary ">Go Back&nbsp;<i class="bi bi-arrow-90deg-left"></i> </a>
            </div></div></div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
