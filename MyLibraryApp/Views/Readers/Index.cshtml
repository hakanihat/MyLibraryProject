@model IEnumerable<MyLibraryApp.Models.Reader>

@{
    ViewData["Title"] = "Index";
}

<h1>Readers</h1>



<form asp-action="Index">
   <div class="row">
    <div class=col-6 >
    <a asp-action="Create" class="btn btn-primary "><i class="bi bi-plus-square"></i>&nbsp; Register a reader</a>
    </div>
    <div class="input-group md-form form-sm form-2 p1-0">
       
         <input name="readerID" class="form-control  " type="text" placeholder="Search by reader id or tel. number" aria-label="Search" />
        <div class="input-group-append">

            <span class="input-group-text red lightne-3" id="basic-text1">
               <i class="bi bi-search"></i>
            </span>
        </div>
    </div> </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReaderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{if (Model == null)
            {
                <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
            }
            else{


@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReaderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReaderId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a> <b>&ensp;</b>
                <a asp-action="Delete" asp-route-id="@item.ReaderId" class="btn btn-danger"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}}}
    </tbody>
</table>

@section scripts{
    <script>
       $ (function(){
           $("#basic-text1").click(function () {
               $("Form").submit();
           })
       });
    </script>
}